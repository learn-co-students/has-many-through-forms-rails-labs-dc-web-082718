<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  Create categories?<br>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    Category Name:<%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
